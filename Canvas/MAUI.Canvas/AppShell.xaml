<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MAUI.Canvas.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MAUI.Canvas"
    xmlns:local2="clr-namespace:MAUI.Canvas.Views"
    xmlns:local3="clr-namespace:MAUI.Canvas.Dialogs"
    Shell.FlyoutBehavior="Disabled"
    Title="MAUI.Canvas">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="People"
        ContentTemplate="{DataTemplate local2:PeopleView}"
        Route="People" />
    <ShellContent
        Title="People"
        ContentTemplate="{DataTemplate local3:PersonDialog}"
        Route="PersonDetail" />
    <ShellContent
        Title="Courses"
        ContentTemplate="{DataTemplate local2:CoursesView}"
        Route="Courses" />

</Shell>
