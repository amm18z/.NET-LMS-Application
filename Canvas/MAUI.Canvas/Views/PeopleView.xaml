<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.Canvas.Views.PeopleView"
             Title="PeopleView"
             NavigatedTo="ContentPage_NavigatedTo">
    <VerticalStackLayout>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Entry Text="{Binding Query}" Grid.Column="0"/>
            <Button Text="Search" Clicked="SearchClicked" Grid.Column="1"/>
        </Grid>
        <ListView
            ItemsSource="{Binding People}"
            SelectedItem="{Binding SelectedPerson}">
        </ListView>
        <Button Text="Add Person" Clicked="AddClicked"/>
        <Button Text="Update Person" Clicked="UpdateClicked"/>
        <Button Text="Remove Person" Clicked="RemoveClicked"/>
        <Button Text="Back" Clicked="BackClicked"/>
    </VerticalStackLayout>
</ContentPage>